<p id="notice"><%= notice %></p>

<h1>Image Files</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>File name</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_files.each do |image_file| %>
      <tr>
        <td><%= image_file.user_id %></td>
        <td><%= image_file.file_name %></td>
        <td><%= image_file.comment %></td>
        <td><%= link_to 'Show', image_file %></td>
        <td><%= link_to 'Edit', edit_image_file_path(image_file) %></td>
        <td><%= link_to 'Destroy', image_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

