<p id="notice"><%= notice %></p>

<h1>Pagecomments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pagecomments.each do |pagecomment| %>
      <tr>
        <td><%= pagecomment.title %></td>
        <td><%= pagecomment.detail %></td>
        <td><%= link_to 'Show', pagecomment %></td>
        <td><%= link_to 'Edit', edit_pagecomment_path(pagecomment) %></td>
        <td><%= link_to 'Destroy', pagecomment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pagecomment', new_pagecomment_path %>
